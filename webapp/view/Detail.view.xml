<mvc:View
    controllerName="com.bootcamp.sapui5.finalproject.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:smartTable="sap.ui.comp.smarttable"
>
    >
    <Page
        id="pageDetail"
        title="{i18n>showDetails}"
    >
        <VBox>
            <f:SimpleForm
                editable="false"
                layout="ResponsiveGridLayout"
                title="{i18n>supplier}"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <f:content>
                    <Label
                        text="{i18n>companyName}"
                    />
                    <Text
                        text="{CompanyName}"
                    />
                    <Label
                        text="{i18n>contactName}"
                    />
                    <Text
                        text="{ContactName}"
                    />
                    <Label
                        text="{i18n>contactTitle}"
                    />
                    <Text
                        text="{ContactTitle}"
                    />
                    <Label
                        text="{i18n>address}"
                    />
                    <Text
                        text="{Address}"
                    />
                </f:content>
            </f:SimpleForm>
            <smartTable:SmartTable
                entitySet="Products"
                tableBindingPath="Products"
                initiallyVisibleFields="ProductID,ProductName,UnitPrice,UnitsInStock"
                tableType="ResponsiveTable"
                enableExport="true"
                useVariantManagement="false"
                useTablePersonalisation="true"
                header="{i18n>products}"
                showRowCount="true"
                showFullScreenButton="true"
                enableAutoBinding="true"
                class="sapUiResponsiveContentPadding"
                enableAutoColumnWidth="true"
                editTogglable="false"
            >
                <smartTable:customToolbar>
                    <OverflowToolbar design="Transparent">
                        <ToolbarSpacer/>
                        <OverflowToolbarButton icon="sap-icon://add-product" tooltip="{i18n>addProduct}" press=".onAddProduct" ariaHasPopup="Dialog"/>
                    </OverflowToolbar>
                </smartTable:customToolbar>
            </smartTable:SmartTable>
        </VBox>
    </Page>
</mvc:View>
