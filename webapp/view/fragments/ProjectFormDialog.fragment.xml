<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="projectFormDialog"
        title="{i18n>addProduct}"
        icon="sap-icon://activity-items"
        busy="false"
        busyIndicatorDelay="0"
        class="sapUiSizeCompact"
    >
        <content>
            <f:SimpleForm
                editable="true"
                id="ListForm"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="4"
                adjustLabelSpan="false"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
                width="30rem"
            >
                <f:content>
                    <core:Title text="{i18n>fillTheForm}" />
                    <Label text="{i18n>name}" />
                    <Input required="true" change="onChange"/>
                    <Label text="{i18n>category}" />
                    <Select
						forceSelection="true"
						selectedKey="{/SelectedProduct2}"
						items="{
							path: '/Categories',
							sorter: { path: 'CategoryName' }
						}">
                        <core:Item key="{CategoryID}" text="{CategoryName}" />
                    </Select>
                    <Label text="{i18n>category}" />
                    <Input
                    id="productInput"
                    type="Text"
                    placeholder="Enter Product ..."
                    showValueHelp="true"
                    valueHelpRequest=".onValueHelpRequest"
                    class="sapUiSmallMarginBottom"
                    width="15rem" />
                    <Label text="{i18n>quantityPerUnit}" />
                    <Input required="true" change="onChange"/>
                    <Label text="{i18n>unitPrice}" />
                    <Input required="true" change="onChange"/>
                    <Label text="{i18n>unitsInStock}" />
                    <Input required="true" type="Number" change="onChange"/>
                    <Label text="{i18n>reorderLevel}" />
                    <Input required="true" type="Number" change="onChange"/>
                </f:content>
            </f:SimpleForm>
        </content>
        <footer>
			<Toolbar>
				<content>
					<ToolbarSpacer />
					<Button type="Accept"
							text="{i18n>save}"
							press="._generateInvalidUserInput" />
					<Button id="Reject"
						text="{i18n>reject}"
						type="Reject"
						press="._closeDialog"
						ariaHasPopup="Dialog" />
				</content>
			</Toolbar>
		</footer>
    </Dialog>
</core:FragmentDefinition>
